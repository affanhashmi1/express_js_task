<%include partials/header.ejs%>
  <%include partials/nav.ejs%>

  <section class="my-5">
    <div class="container">
      <div class="row">
        <%movies.forEach((movie) => {%>
          <div class="col-md-4 my-3 text-center">
            <div class="card">
              <div class="card-header">
                <%=movie.name%>
              </div>
              <div class="card-body">
                <img src="/public/images<%=movie.path%>" width="80%" height="300" />
              </div>
              <div class="card-footer">
                <a class="btn btn-primary" href="/movie/<%=movie.id%>">View</a>
                <button class="btn btn-success">Download</button>
              </div>
            </div>
          </div>
        <%})%>
      </div>
    </div>
  </section>
<%include partials/footer.ejs%>
